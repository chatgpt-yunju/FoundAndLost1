<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#EA4D3C">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iv_found_back"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:text="{fa-chevron-left}"
            android:textColor="#fff"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加捡到物品"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iv_found_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="{fa-check}"
            android:textColor="#fff"
            android:textSize="25sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_found_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="标题"
        android:textColorHint="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_found_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="手机号码"
        android:textColorHint="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_found_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="描述"
        android:textColorHint="#000"
        android:textSize="15sp" />
</LinearLayout>